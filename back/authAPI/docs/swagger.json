{
  "swagger": "2.0",
  "info": {
    "description": "Back-end do Projeto Pilha Completa",
    "version": "1.0.0",
    "title": "PPC - Back-end"
  },
  "schemes": [
    "https"
  ],
  "paths": {
    "/auth/create": {
      "post": {
        "summary": "Create Auth",
        "operationId": "createAuth",
        "description": "Cria um usuário de autenticação (Auth)",
        "tags": [
          "Autenticação"
        ],
        "parameters": [],
        "responses": {
          "201": {
            "description": "Auth criado com sucesso",
            "schema": {
              "$ref": "#/definitions/Auth"
            }
          },
          "500": {
            "description": "Erro interno."
          }
        }
      }
    },
    "/auth/login": {
      "put": {
        "summary": "Autentica o usuário",
        "operationId": "authentication",
        "description": "Autententica o usuário com base no seu email ou login, e senha, e retorna um token JWT",
        "tags": [
          "Autenticação"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "Logado com sucesso",
            "schema": {
              "properties": {
                "JWT-Token": {
                  "type": "string",
                  "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado."
          },
          "500": {
            "description": "Erro interno."
          }
        }
      }
    }
  },
  "definitions": {
    "Auth": {
      "type": "object",
      "properties": {
        "login": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "idUser": {
          "type": "string"
        },
        "senha": {
          "type": "string"
        },
        "permissao": {
          "type": "number"
        },
        "tokenLogin": {
          "type": "string"
        },
        "tokenRecuperar": {
          "type": "string"
        },
        "ultimoLogin": {
          "type": "string",
          "format": "date"
        }
      },
      "required": [
        "login",
        "email",
        "idUser",
        "senha",
        "permissao"
      ]
    }
  }
}